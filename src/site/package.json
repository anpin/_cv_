{
  "name": "site",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "astro dev",
    "generate-pdf:cv": "node ./scripts/generate-pdf.js /cv public/pavel_anpin_cv.pdf",
    "generate-pdf:cv_av": "node ./scripts/generate-pdf.js /cv_av public/pavel_anpin_cv_av.pdf",
    "generate-pdf:all": "yarn generate-pdf:cv && yarn generate-pdf:cv_av",
    "generate-pdf:ci": "PDF_VIEW=true start-server-and-test start http://localhost:4321 generate-pdf",
    "generate-pdf:ci:cv": "PDF_VIEW=true start-server-and-test start http://localhost:4321 generate-pdf:cv",
    "generate-pdf:ci:cv_av": "PDF_VIEW=true start-server-and-test start http://localhost:4321 generate-pdf:cv_av",
    "generate-pdf:ci:all": "PDF_VIEW=true start-server-and-test start http://localhost:4321 \"sh -c 'yarn generate-pdf:cv && yarn generate-pdf:cv_av'\"",
    "prebuild": "yarn --offline astro check",
    "build": "astro build",
    "build:light": "FORCE_THEME=light astro build",
    "build:dark": "FORCE_THEME=dark astro build"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^5.1.0",
    "@fontsource/dm-mono": "^5.0.14",
    "@playwright/test": "^1.42.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-inject": "^5.0.3",
    "@rollup/plugin-terser": "^0.4.0",
    "ts2fable": "^0.7.1",
    "@tailwindcss/typography": "^0.5.13",
    "@types/node": "^20.14.2",
    "daisyui": "^4.12.23",
    "postcss": "^8.4.21",
    "prettier": "^3.3.2",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-tailwindcss": "^0.6.4",
    "start-server-and-test": "^2.0.4",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite-plugin-fable": "^0.0.34",
    "vite": "^6.0.0",
    "esbuild": "^0.25.0"
  },
  "dependencies": {
    "@astrojs/check": "^0.7.0",
    "astro": "^4.10.2",
    "p5": "^1.9.0"
  }
}
